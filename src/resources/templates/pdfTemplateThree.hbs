   background-color: white;
   padding: 20px;
   padding-bottom: 0px;
}
.cardHeader {
    background-color: white;
    padding: 1px 20px 1px 20px;
}

/* Clear floats after the columns */
.row:after {
    margin-top: 0;
    margin-bottom: 0;
    content: "";
    display: table;
    clear: both;
}
.text-center {
    text-align: center;
}
/* Footer */
.footer {
  margin: 10px 20px 10px 20px;
  padding-bottom: 30px;
  padding-left: 10px;
  text-align: left;
  border-radius: 5px;
  border: 3px solid #0073CE;

