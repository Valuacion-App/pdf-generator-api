.description {
    font-size: small;
    line-height: 1.25;
}
.textHeader {
  font-size: smaller;
  width: 100%;
  text-align: left;
  line-height: 0.3;
}
/* Right column */
.Rightcolumn {
  text-align: center;
  float: left;
  width: 40%;

  padding-right: 10px;
}

/* Fake image */
.fakeimg {
  background-color: #aaa;
  width: 100%;
  padding: 20px;
}

/* Add a card effect for articles */
