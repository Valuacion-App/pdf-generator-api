/* Header/Blog Title */
.header {

  font-size: 40px;
  text-align: center;
  background: white;
}

/* Create two unequal columns that floats next to each other */
/* Left column */
.containerImage{
    display: flex;
    gap: 5px;
    justify-content: center;
    align-items: center;
}
.leftcolumn {   
    float: left;
    width: 30%;
    height: 40px;
}
.centercolumn {   
  float: left;
  width: 30%;
}
.descriptionColumn {   

    float: left;
    padding-left: 3%;
    width: 100%;

}
